<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.web.WebView?>

<GridPane fx:controller="m07_css_transformation_choosers.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          stylesheets="@styles.css" fx:id="gridPane">
    <Button text="Przycisk pierwszy" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Button text="Przycisk drugi" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button text="Przycisk trzeci" GridPane.rowIndex="0" GridPane.columnIndex="2"
        id="button_three"/>   <!-- dajemy tu zwykłe id (a nie fx:id) -->
    <Button text="Przycisk czwarty" fx:id="button4" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
    <Button text="Przycisk piąty" GridPane.rowIndex="0" GridPane.columnIndex="4"/>

    <Label text="JavaFX Effects" fx:id="label" GridPane.rowIndex="1" GridPane.columnIndex="0"
        onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit"
        rotate="5"/>

    <Button text="Plik..." onAction="#handleClick" GridPane.rowIndex="2" GridPane.columnIndex="0" id="open"/>

    <Hyperlink text="www.javafx.com" GridPane.rowIndex="3" GridPane.columnIndex="0" onAction="#handleLinkClick"/>
    <WebView fx:id="webView" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="5" GridPane.rowSpan="3"/>
</GridPane>