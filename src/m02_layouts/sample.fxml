<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.geometry.Insets?>
<GridPane fx:controller="m02_layouts.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="top_center" hgap="20" vgap="20"
          gridLinesVisible="true">
    <padding>   <!-- dodaje odstęp pomiędzy krawędzią okna a jego zawartością (!!!umiejscowienie!!!) -->
        <Insets top="10"/>
    </padding>
    <columnConstraints>   <!-- steruje szerokością komórek w tabeli wyświetlanego okienka -->
        <ColumnConstraints percentWidth="30.0"/>
        <ColumnConstraints percentWidth="70.0"/>
    </columnConstraints>
    <Button text="Przycisk pierwszy" GridPane.rowIndex="0" GridPane.columnIndex="0"
        GridPane.halignment="RIGHT"/>
    <Button text="Przycisk drugi" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button text="Przycisk trzeci" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button text="Przycisk czwarty (długi)" GridPane.rowIndex="2" GridPane.columnIndex="0"
        GridPane.columnSpan="2"/>
</GridPane>